    <script>
        const FONT_COLOR = '#f0f8ff';
        const GRID_COLOR = '#003554';
        const PALETTE = {
            blue: '#00A6FB',
            darkBlue: '#0582CA',
        };

        Chart.defaults.font.family = "'Inter', 'Noto Sans JP', sans-serif";
        Chart.defaults.color = FONT_COLOR;

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };
        
        const wrapLabel = (label, maxLength = 16) => {
            if (label.length <= maxLength) return label;
            const words = label.split(' ');
            let lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + ' ' + word).trim().length > maxLength) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            }
            if (currentLine) lines.push(currentLine.trim());
            return lines;
        }

        const complexityChartCtx = document.getElementById('complexityChart').getContext('2d');
        new Chart(complexityChartCtx, {
            type: 'bar',
            data: {
                labels: ['1x', '2x', '4x', '8x'],
                datasets: [{
                    label: 'è¨ˆç®—ã‚³ã‚¹ãƒˆ',
                    data: [1, 4, 16, 64],
                    backgroundColor: PALETTE.darkBlue,
                    borderColor: PALETTE.blue,
                    borderWidth: 2,
                    borderRadius: 4,
                }]
            },
            options: {
                maintainAspectRatio: false,
                responsive: true,
                plugins: {
                    legend: {
                        display: false,
                    },
                    title: {
                        display: true,
                        text: 'å…¥åŠ›é•·ã«å¯¾ã™ã‚‹è¨ˆç®—ã‚³ã‚¹ãƒˆ (O(nÂ²))',
                        color: FONT_COLOR,
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'å…¥åŠ›ç³»åˆ—é•· (n)',
                            color: FONT_COLOR,
                        },
                        grid: {
                            color: GRID_COLOR,
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'è¨ˆç®—ã‚³ã‚¹ãƒˆ',
                            color: FONT_COLOR,
                        },
                        grid: {
                            color: GRID_COLOR,
                        },
                         type: 'logarithmic',
                    }
                }
            }
        });
    </script>
